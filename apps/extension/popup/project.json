{
    "name": "extension-popup",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "sourceRoot": "apps/extension/popup/src",
    "tags": [],
    "targets": {
        "build": {
            "executor": "@nx/vite:build",
            "outputs": ["{options.outputPath}"],
            "defaultConfiguration": "production",
            "options": {
                "outputPath": "extension/pages/popup"
            },
            "configurations": {
                "development": {
                    "mode": "development"
                },
                "production": {
                    "mode": "production"
                }
            }
        },
        "serve": {
            "executor": "@nx/vite:dev-server",
            "defaultConfiguration": "development",
            "options": {
                "buildTarget": "extension-popup:build"
            },
            "configurations": {
                "development": {
                    "buildTarget": "extension-popup:build:development",
                    "hmr": true
                },
                "production": {
                    "buildTarget": "extension-popup:build:production",
                    "hmr": false
                }
            }
        }
    }
}
