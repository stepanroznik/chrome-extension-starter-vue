{
  "name": "extension-options",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/extension/options/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "extension/pages/options"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "extension-options:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "extension-options:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "extension-options:build:production",
          "hmr": false
        }
      }
    }
  }
}
