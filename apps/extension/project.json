{
  "name": "extension",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/extension",
  "tags": ["type:script"],
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run-many --target=build --projects=extension-* --configuration development --watch --parallel 5"
        ]
      },
      "configurations": {
        "production": {
          "commands": [
            "npm run bump-minor && npm run sync-manifest-version",
            "nx run-many --target=build --projects=extension-* --configuration production --watch --parallel 5"
          ]
        },
        "development": {}
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run-many --target=build --projects=extension-* --configuration development --parallel 5"
        ]
      },
      "configurations": {
        "production": {
          "commands": [
            "npm run bump-minor",
            "npm run sync-manifest-version",
            "nx run-many --target=build --projects=extension-* --configuration production --parallel 5"
          ]
        },
        "development": {}
      }
    }
  }
}
